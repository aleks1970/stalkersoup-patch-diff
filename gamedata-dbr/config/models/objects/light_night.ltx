;;TB3D 1.0.9.9.1.5 flashlight types
;;weak halogen white is default
;;to change: insert a ]; in the one you want and ]; from the last one selected
;;i.e. _definition_bhlgn] to _definition];  and   definition];_whlgn] to definition_whlgn]
;;this will deselect the white and select the blue halogen

[torch_definition_std]		;;;standard flashlight
range           =17
range_r2        =17
color           = 0.8,0.8,0.5,0.2						; four color components <r,g,b,a> 0.f<X<3.f
color_r2        = 0.8,0.8,0.5,0.2						; four color components <r,g,b,a> 0.f<X<3.f
omni_range      = 7									; range                 <in meters>
omni_range_r2   = 0.75									; range                 <in meters>
omni_color      = 0.9,0.9,0.6,0.1						; four color components <r,g,b,a> 0.f<X<3.f
omni_color_r2   = 0.9,0.9,0.6,0.1						; four color components <r,g,b,a> 0.f<X<3.f
color_animator  = empty									; color animator name   (empty - not using animator)
spot_texture    = internal\internal_light_torch_r2		; spot texture name     (using only in Second Render)
spot_angle      = 51
glow_texture    = glow\glow_torch_r2					; glow texture name     (required)
glow_radius     = 0.5									; glow radius           <in meters>
guide_bone      = lights_bone							; guid bone name        (required)


[torch_definition_bhlgn]		;;;;blue halogen
range           = 30									; range                 <in meters>
range_r2        = 40									; range                 <in meters>
color           = 0.0,2.0,2.0,1.0
color_r2        = 0.0,2.0,2.0,1.0				        ; four color components <r,g,b,a> 0.f<X<3.f 
omni_range      = 1.5									; range                 <in meters> 
omni_range_r2   = 1.5						            ; range                 <in meters>
omni_color      = 0.0,2.0,2.0,1.0
omni_color_r2   = 0.0,2.0,2.0,1.0					    ; four color components <r,g,b,a> 0.f<X<3.f
color_animator  = empty						            ; color animator name   (empty - not using animator)
spot_texture    = internal\internal_light_torch_r2		; spot texture name     (using only in Second Render)
spot_angle      = 90						            ; spot angle            <in gradus>
glow_texture    = glow\glow_torch_r2				    ; glow texture name     (required)
glow_radius     = 1.5									; glow radius           <in meters>
guide_bone      = lights_bone							; guid bone name        (required)

[torch_definition];_whlgn]		;;;;weak halogen - white, default
range           = 18									; range                 <in meters>
range_r2        = 30									; range                 <in meters>
color           = 1.0,1.0,1.0,0.0
color_r2        = 0.8,0.8,0.8,0.0				        ; four color components <r,g,b,a> 0.f<X<3.f 
omni_range      = 0.8									; range                 <in meters> 
omni_range_r2   = 1.0						            ; range                 <in meters>
omni_color      = 1.0,1.0,1.0,1.0
omni_color_r2   = 0.8,0.8,0.8,1.0					    ; four color components <r,g,b,a> 0.f<X<3.f
color_animator  = empty						            ; color animator name   (empty - not using animator)
spot_texture    = internal\internal_light_torch_r2		; spot texture name     (using only in Second Render)
spot_angle      = 60						            ; spot angle            <in gradus>
glow_texture    = glow\glow_torch_r2				    ; glow texture name     (required)
glow_radius     = 0.73									; glow radius           <in meters>
guide_bone      = lights_bone							; guid bone name        (required)

