//TB3D 109993 Adapted from Meltac 2.0 DX11 shaders
#include "common.h"

#ifdef DX11
float4 main(v_shadow_direct_aref I):COLOR {
#ifdef USE_HWSMAP
return tex2D(s_base,I.tc0);
#else
float4 C=tex2D(s_base,I.tc0);
clip(C.w-def_aref);
return I.depth;
#endif
}

#else

half4 main(v_shadow_direct_aref I):COLOR {
#ifdef USE_HWSMAP
return tex2D(s_base,I.tc0);
#else
half4 C=tex2D(s_base,I.tc0);
clip(C.w-def_aref);
return I.depth;
#endif
}

#endif