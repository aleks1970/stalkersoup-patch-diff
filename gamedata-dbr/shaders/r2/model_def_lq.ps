//TB3D 109993 Adapted from Meltac 2.0 DX11 shaders
#include "common.h"

#ifdef DX11
struct v2p {
float2 tc0:TEXCOORD0;
float2 tc1:TEXCOORD1;
float3 c0:COLOR0;
};
float4 main_ps_2_0(v2p I):COLOR {
float4 t_base=tex2D(s_base,I.tc0);
float3 light=I.c0;
float3 final=light*t_base*2;
return float4(final.r,final.g,final.b,t_base.a);
}

#else

struct v2p {
half2 tc0:TEXCOORD0;
half2 tc1:TEXCOORD1;
half3 c0:COLOR0;
};
half4 main_ps_2_0(v2p I):COLOR {
half4 t_base=tex2D(s_base,I.tc0);
half3 light=I.c0;
half3 final=light*t_base*2;
return half4(final.r,final.g,final.b,t_base.a);
}

#endif