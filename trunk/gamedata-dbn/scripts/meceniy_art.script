function on_actor_update()
	if TB3D_Modders.Global_Debug then
		TB3D_Services.packet_alert("mec art: update delta["..utils.to_str(delta).."]")
	end
	local outfit = db.actor:item_in_slot(6)
	if outfit and string.find(outfit:name(), "exo_mil_exoskeleton_addx") then
		exo_update(outfit)
	else
		last_time = nil
	end
	if TB3D_Modders.Global_Debug then
		TB3D_Services.packet_alert("mec art: update done")
	end
end

local cntr = 0
function exo_update(item)
	local used = amk.load_variable("tb3d_acumm_use", 0)
	local have_art_accum = db.actor:object("art_acumm")
	if not last_time then last_time = game.get_game_time() end
	local tm_diff = game.get_game_time():diffSec(last_time)
	last_time = game.get_game_time()
	if used > 0 then
		used = used - tm_diff * 0.1
		if used <= 0 then
			if have_art_accum then
				meceniy_utils.delete_some_somth("art_acumm", 1)
				amk.save_variable("tb3d_acumm_use", full_charge)
				news_manager.send_tip_txt(db.actor, "Suit Power System:  Suit power 100%\\n", nil, nil, 30000)
				cntr = 0
			else
				news_manager.send_tip_txt(db.actor, "Suit Power System:  No power sources remaining\\n", nil, nil, 30000)
				amk.save_variable("tb3d_acumm_use", 0)
			end
		end
	elseif have_art_accum then
		meceniy_utils.delete_some_somth("art_acumm", 1)
		amk.save_variable("tb3d_acumm_use", full_charge)
		news_manager.send_tip_txt(db.actor, "Suit Power System:  Suit power 100%\\n", nil, nil, 30000)
		cntr = 0
	else
		local cond = item:condition()
		cond = cond * 0.997
		if cond < 0 then cond = 0 end
		item:set_condition(cond)
		if cond > 0.8 then
			if cntr < 1 then
				news_manager.send_tip_txt(db.actor, "Suit Power System:  Suit power 0% .. support has failed! You should locate additional power sources!\\n", nil, nil, 30000)
				cntr = 1
			end
		elseif cond < 0.5 then
			if cntr < 100 then
				news_manager.send_tip_txt(db.actor, "Suit Power System:  Suit condition serious! Change your suit now as damage is occuring!\\n", nil, nil, 30000)
				cntr=100
			end
		elseif cond < 0.1 then
			if cntr < 100 then
				news_manager.send_tip_txt(db.actor, "Suit Power System:  Suit condition critical! Suit has sustained ~100% damage!\\n", nil, nil, 30000)
				cntr=100
			end
		end
	end
end
	
