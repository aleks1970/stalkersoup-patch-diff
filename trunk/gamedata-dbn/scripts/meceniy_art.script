			art_spawn("art_acumm", level.name())
		--end
		TB3D_Services.give_info("art_mec_spawn")
	end
	if timeh == 23 and has_alife_info("art_mec_spawn") then
		TB3D_Services.remove_info("art_mec_spawn")
	end
end

