;----------------------------------------
; Запорожец "Ушастый" (общий конфиг для 2 моделей Запора - обычного и желтого)
;----------------------------------------

[disable]
linear_factor			= 0.5
angular_factor    		= 0.5

;-------------------------------------------------------------------------------
;------ Общие параметры---------------------------------------------------------
[car_definition]
time_to_explosion		= 50
camera_pos        		= -0.33, 1.2, 0.25                                                      ; позиция камеры актора в машине
driving_wheels    		= back_left_wheel,back_right_wheel 	                                    ; ведущие колёса
steering_wheels   		= front_left_wheel,front_right_wheel                                    ; рулевые колёса
breaking_wheels   		= back_left_wheel,back_right_wheel,front_left_wheel,front_right_wheel 	; тормозящие колёса
doors             		= left_door,right_door					                                ; двери
steer             		= stearing_wheel 					                                    ; руль
driver_place      		= seat_left 						                                    ; место водителя
exhausts          		= exhaust						                                        ; выхлопная труба
exhaust_particles 		= vehiclefx\exhaust_1
damage              	= damage_bones

;-------------------------------------------------------------------------------
;------ Factory parameters of Engine -------------------------------------------
fuel_tank         		= 80         	; L
fuel_consumption  		= 9.5		    ; L / (100k R); liters per 100 000 rotations
engine_power      		= 33        	; horse_power (kW=hp*0.808) max power
max_power_rpm     		= 4300        	; (nominal rpm ) on this rpm value engine power reaches maximum, must be within every diapason 	- shift down/ shift up
max_torque_rpm    		= 2800       	; on this rpm engine torque reaches maximum

power_increment_factor	= 0.02
power_decrement_factor	= 0.01
rpm_increment_factor	= 0.03
rpm_decrement_factor	= 0.02
m_power_neutral_factor	= 0.75

; additional engine parameters
max_engine_rpm    		= 4400			; rpm (5000) rpm will never be more
idling_engine_rpm		= 850       	; rpm (750) min rpm - starts from this rpm value

;-------------------------------------------------------------------------------
;------ Adjustment a wheel -----------------------------------------------------
reference_radius  		= 0.32			; Радиус колеса, используемый при просчёте двигателя
axle_friction     		= 0.00001      	; Ослабление скорости в неетральной позиции. (N*m)
steering_speed    		= 0.7         	; Скорость поворота рулевого колеса, в максимум. rps (1)
steering_torque   		= 900000.    	; Сила гидроусилителя руля. (N*m)
break_torque      		= 0.02        	; Сила тормозных колодок. (N*m)
break_time        		= 1.0         	; время нарастания силы торможения до максимума, при подтормаживании (стрелка назад)
hand_break_torque 		= 0.02        	; сила торможения пробелом (по умолчанию = break_torque)

;-------------------------------------------------------------------------------
;------ Gearbox ----------------------------------------------------------------
main_gear_ratio    		= 4.63       	; Передаточное отношение
auto_transmission  		= off           ; Автоматическая коробка (on/off)

[transmission_gear_ratio]
; shift down/ shift up. (rpm, необходимое для переключения)
R                  		= 4.76, 740,  3000
N1                 		= 3.73, 740,  2200
N2                 		= 2.29, 1200, 2750
N3                 		= 1.39, 2050, 2850
N4                 		= 0.96, 3200, 4300

;-------------------------------------------------------------------------------
;------ Rest Adjustment --------------------------------------------------------
[lights]
headlights  = f1,f2

[f1]
bone               		= right_light
color              		= 1.9,1.9,1.9,1.0
range              		= 35
cone_angle         		= 45
spot_texture       		= internal\internal_light_attpoint
glow_texture       		= glow\glow_white
glow_radius        		= 0.5

[f2]
bone               		= left_light
color              		= 1.9,1.9,1.9,1.0
range              		= 35
cone_angle         		= 45
spot_texture       		= internal\internal_light_attpoint
glow_texture       		= glow\glow_white
glow_radius        		= 0.5

;-------------------------------------------------------------------------------
;------ Звуки ------------------------------------------------------------------
[car_sound]
snd_volume         			= 1.0
snd_name           			= car\car1
engine_sound_start_dellay	= 0.5
engine_start				= car\test_car_start
engine_stop					= car\test_car_stop
transmission_switch			= car\car_gearchange
explosion_sound    			= weapons\heli_explosion
relative_pos       			= 0.0,0.6,-1.5

;-------------------------------------------------------------------------------
;------ animations params ------------------------------------------------------
[doors]
open_torque_factor 		= 2	;множитель момента сил для открывания двери (default = 2)

[animations]
driver_animation_type 	= 0	;тип анимаций актера для данной машины.

