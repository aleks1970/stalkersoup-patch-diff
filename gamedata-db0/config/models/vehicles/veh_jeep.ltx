damage                          = damage_bones

;-------------------------------------------------------------------------------
;------ Factory parameters of Engine -------------------------------------------
fuel_tank         = 150.       ; L
fuel_consumption  = 12.0       ; L / (100k R); liters per 100 000 rotations
engine_power      = 170        ; horse_power (kW=hp*0.808) max power
max_power_rpm     = 4000       ; (nominal rpm ) on this rpm value engine power reaches maximum
max_torque_rpm    = 2600.      ; on this rpm engine torque reaches maximum

power_increment_factor	= 0.02
