steering_speed    = 0.7         ; Время поворота рулевого колеса, в максимум. rps (1)
steering_torque   = 900000.     ; Сила гидроусилителя руля. (N*m)
break_torque      = 0.05        ; Сила тормозных колодок. (N*m)
