;----------------------------------------
; Автобус КАвЗ-685
;----------------------------------------

[disable]
linear_factor			= 0.5
angular_factor    		= 0.5

;-------------------------------------------------------------------------------
;------ Общие параметры---------------------------------------------------------
[car_definition]
time_to_explosion		= 10
camera_pos        		= -0.55, 2.3, 1.5                                                       ; позиция камеры актора в машине
driving_wheels    		= back_left_wheel,back_right_wheel 	                                    ; ведущие колёса
steering_wheels   		= front_left_wheel,front_right_wheel					                ; рулевые колёса
breaking_wheels   		= back_left_wheel,back_right_wheel,front_left_wheel,front_right_wheel 	; тормозящие колёса
doors             		= right_door,left_door                                                  ; двери
steer             		= stearing_wheel 					                                    ; руль
driver_place      		= seat_left 						                                    ; место водителя
exhausts          		= exhausts 							                                    ; выхлопная труба
exhaust_particles 		= vehiclefx\exhausts\exhaust_kamaz
damage              	= damage_bones

;-------------------------------------------------------------------------------
;------ Factory parameters of Engine -------------------------------------------
fuel_tank         		= 80         	; L
fuel_consumption  		= 1		       	; L / (100k R); liters per 100 000 rotations
engine_power      		= 88	        ; horse_power (kW=hp*0.808) max power
max_power_rpm     		= 3200        	; (nominal rpm ) on this rpm value engine power reaches maximum
max_torque_rpm    		= 2500     	    ; on this rpm engine torque reaches maximum

power_increment_factor	= 0.02
power_decrement_factor	= 0.01
rpm_increment_factor	= 0.03
rpm_decrement_factor	= 0.015
m_power_neutral_factor	= 0.75

; additional engine parameters
max_engine_rpm    		= 3300			; rpm (5000) rpm will never be more
idling_engine_rpm		= 750       	; rpm (750) min rpm - starts from this rpm value

;-------------------------------------------------------------------------------
;------ Adjustment a wheel -----------------------------------------------------
reference_radius  		= 0.5			; Радиус колеса, используемый при просчёте двигателя
axle_friction     		= 0.0001	    ; Ослабление скорости в неетральной позиции. (N*m)
steering_speed    		= 0.8         	; Время поворота рулевого колеса, в максимум. rps (1)
steering_torque   		= 90000		   	; Сила гидроусилителя руля. (N*m)
break_torque      		= 0.012        	; Сила тормозных колодок. (N*m)
break_time        		= 1.0         	; время нарастания силы торможения до максимума, при подтормаживании (стрелка назад)
hand_break_torque 		= 0.012        	; сила торможения пробелом (по умолчанию = break_torque)

;-------------------------------------------------------------------------------
;------ Gearbox ----------------------------------------------------------------
main_gear_ratio    		= 6.85       	; Передаточное отношение
auto_transmission  		= off           ; Автоматическая коробка (on/off)

[transmission_gear_ratio]
; shift down/ shift up. (rpm, необходимое для переключения)
R                  		= 7.77, 1000,3200
N1                 		= 6.55, 1000,3200
N2                 		= 3.09, 1000,3200
N3                 		= 1.71, 1000,3200
N4                 		= 1, 1000,3200

;-------------------------------------------------------------------------------
;------ Rest Adjustment --------------------------------------------------------
[lights]
headlights  = f1,f2

[f1]
bone               		= right_light
color              		= 2.0,2.0,2.0,1.0
range              		= 25
cone_angle         		= 4
spot_texture       		= internal\internal_light_attpoint
glow_texture       		= glow\glow_torch_r2
glow_radius        		= 1

[f2]
bone               		= left_light
color              		= 2.0,2.0,2.0,1.0
range              		= 25
cone_angle         		= 4
spot_texture       		= internal\internal_light_attpoint
glow_texture       		= glow\glow_torch_r2
glow_radius        		= 1

;-------------------------------------------------------------------------------
;------ Звуки ------------------------------------------------------------------
[car_sound]
snd_volume         		    = 1.0
snd_name           		    = car\zil_run
engine_sound_start_dellay	= 0.5
engine_start			    = car\zil_start
engine_stop				    = car\zil_stop
transmission_switch		    = car\car_gearchange
explosion_sound    		    = weapons\heli_explosion
relative_pos       		    = 0.0,1.5,3

;-------------------------------------------------------------------------------
;------ animations params ------------------------------------------------------
[doors]
open_torque_factor 		= 2	;множитель момента сил для открывания двери (default = 2)

[animations]
driver_animation_type 	= 0	;тип анимаций актера для данной машины.

;-------------------------------------------------------------------------------
;------ damage params ----------------------------------------------------------
[damage_particles]
explosion_particles      = explosions\expl_vehichels
car_damage_particles1    = explosions\expl_car_smoke_small
car_damage_particles2    = explosions\expl_car_smoke_small
wheels_damage_particles1 = vehiclefx\exhaust_1
wheels_damage_particles2 = vehiclefx\exhaust_1
particle_bones1          = engine
particle_bones2          = kapot

;-------------------------------------------------------------------------------
;------ particle bones ---------------------------------------------------------
[particle_bones]
engine					= 0,0,0.6
kapot 					= 0,0,0

;-------------------------------------------------------------------------------
;------ damage items -----------------------------------------------------------
[damage_items]
back_left_wheel   		= 5000
back_right_wheel  		= 5000
front_left_wheel  		= 5000
front_right_wheel 		= 5000
left_door         		= 3000
right_door         		= 3000

;-------------------------------------------------------------------------------
;------ collisiondamage --------------------------------------------------------
[collision_damage]
root            = 0.0001
kapot			= 0.0001
engine			= 0.00001

;-------------------------------------------------------------------------------
;------ damage bones -----------------------------------------------------------
[damage_bones]          ;аналогично секции в актере, но без анимаций
;bone_name     			= <hit_scale>,<-1>,<wound_scale>
;<hit_scale> 			- коэфф. изменения хита (уменьшения здоровья)
;<wound_scale> 			- коэфф. изменения величины открытой раны - незадействован
default       			= 0.1, -1, 0.1
kapot				    = 0.5
engine  			    = 1

;-------------------------------------------------------------------------------
;------ Иммунитеты -------------------------------------------------------------
[immunities]
burn_immunity         	= 0.005
strike_immunity       	= 0.0001
shock_immunity        	= 0.0001
wound_immunity        	= 0.005
radiation_immunity    	= 0.000001
telepatic_immunity    	= 0.000001
chemical_burn_immunity 	= 0.001
explosion_immunity    	= 0.0001
fire_wound_immunity   	= 0.005
wound_2_immunity  		= 0.0

;-------------------------------------------------------------------------------
;----------------explosion params-----------------------------------------------
[explosion]
blast			    = 20
blast_r			    = 8
blast_impulse		= 350
frags		        = 44
frags_r			    = 20
frag_hit			= 1.7
frag_hit_impulse	= 350
hit_type_blast		= explosion
hit_type_frag		= fire_wound
up_throw_factor		= 0.25
wm_size             = 0.1
explode_particles	= a_ufp_particles\flame_grenade
light_color		    = 0.6,0.5,0.3
light_range		    = 15.0
light_time 		    = 0.5

;трассы от осколков
fragment_speed		        = 76
fragment_tracer_max_length	= 3

explode_duration    = 60          ;подолжительность взрыва (с)
snd_explode 		= weapons\heli_explosion
wallmark_section	= explosion_marks

[explode_effector]
effect_sect_name = effector_explode_hit

;-------------------------------------------------------------------------------
;------ Others params ----------------------------------------------------------
[air_resistance]
linear_factor           = 150.f		;
angular_factor          = 250.f		;

[wheels_params]
damping_factor          = 2			;
spring_factor           = 2			;
friction_factor         = 1.7		;

[front_left_wheel]
break_torque			= 0.095	    ; Сила тормозных колодок. (N*m
hand_break_torque		= 0.095		; сила торможения пробелом (по умолчанию = break_torque)
damping_factor          = 2		    ;
spring_factor           = 10		;
friction_factor         = 1.8		;

[front_right_wheel]
break_torque			= 0.095		; Сила тормозных колодок. (N*m
hand_break_torque		= 0.095		; сила торможения пробелом (по умолчанию = break_torque)
damping_factor          = 2		    ;
spring_factor           = 10		;
friction_factor         = 1.8		;

[back_left_wheel]
break_torque			= 0.06		; Сила тормозных колодок. (N*m
hand_break_torque		= 0.05		; сила торможения пробелом (по умолчанию = break_torque)
damping_factor          = 2		    ;
spring_factor           = 10		;
friction_factor         = 2.2		;

[back_right_wheel]
break_torque			= 0.06		; Сила тормозных колодок. (N*m
hand_break_torque		= 0.05		; сила торможения пробелом (по умолчанию = break_torque)
damping_factor          = 2		    ;
spring_factor           = 10		;
friction_factor         = 2.2		;

[collide]
not_collide_parts		= 1

;-------------------------------------------------------------------------------
;------ destroyed part ---------------------------------------------------------
[destroyed]
physics\vehicles\veh_kavz685

[autoremove_parts]
time					 = 900     ; время удаления обломков (c)

;-------------------------------------------------------------------------------
;--- part impulse_transition ---------------------------------------------------
[impulse_transition_to_parts]
random_min               = 10.0    ; величина случайно направленного импульса пропорционально массе нового объекта
random_hit_imp           = 1.0     ; величина случайно направленного импульса пропорционально разрушающему хиту
;ref_bone                =         ; кость из по которой определяется скорость для частей у который связь не задана, по умолчанию рут
imp_transition_factor    = 1.0     ; фактор с которым прикладывается хит по исходному объекту ко всем частям 
lv_transition_factor     = 0.5     ; коэффициент передачи линейной скорости
av_transition_factor     = 0.5     ; коэффициент передачи угловой скорости

;-------------------------------------------------------------------------------
;------ End params -------------------------------------------------------------