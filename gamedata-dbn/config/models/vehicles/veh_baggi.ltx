;----------------------------------------
; Leaked Baggi
;----------------------------------------

[disable]
linear_factor			= 0.5
angular_factor    		= 0.5

;-------------------------------------------------------------------------------
;------ Общие параметры---------------------------------------------------------
[car_definition]
camera_pos        		= -0.2, 1.47, 0.05                                                               ; позиция камеры актора в машине
time_to_explosion		= 10
driving_wheels    		= back_left_wheel,back_right_wheel,front_left_wheel,front_right_wheel,fan    	 ; ведущие колёса
steering_wheels   		= front_left_wheel,front_right_wheel                                             ; рулевые колёса
breaking_wheels   		= back_left_wheel,back_right_wheel,front_left_wheel,front_right_wheel, 	         ; тормозящие колёса
doors             		= left_door, right_door                                                          ; двери
steer             		= stearing_wheel 					                                             ; руль
driver_place      		= seat_left 						                                             ; место водителя
exhausts          		= exhausts 							                                             ; выхлопная труба
exhaust_particles 		= vehiclefx\exhaust_1
damage              	= damage_bones

;-------------------------------------------------------------------------------
;------ Factory parameters of Engine -------------------------------------------
fuel_tank         		= 80         	; L
fuel_consumption  		= 1.1	       	; L / (100k R); liters per 100 000 rotations
engine_power      		= 60       	    ; horse_power (kW=hp*0.808) max power
max_power_rpm     		= 4000        	; (nominal rpm ) on this rpm value engine power reaches maximum, must be within every diapason 	- shift down/ shift up
max_torque_rpm    		= 2500       	; on this rpm engine torque reaches maximum

power_increment_factor	= 0.05
power_decrement_factor	= 0.02
rpm_increment_factor	= 0.05
rpm_decrement_factor	= 0.02
m_power_neutral_factor	= 0.75

; additional engine parameters
max_engine_rpm    		= 4100			; rpm (5000) rpm will never be more
idling_engine_rpm		= 750       	; rpm (750) min rpm - starts from this rpm value

;-------------------------------------------------------------------------------
;------ Adjustment a wheel -----------------------------------------------------
reference_radius  		= 0.4			; Радиус колеса, используемый при просчёте двигателя
axle_friction     		= 0.0001      	; Ослабление скорости в неетральной позиции. (N*m)
steering_speed    		= 0.6         	; Время поворота рулевого колеса, в максимум. rps (1)
steering_torque   		= 900000    	; Сила гидроусилителя руля. (N*m)
break_torque      		= 0.07       	; Сила тормозных колодок. (N*m)
break_time        		= 1.0         	; время нарастания силы торможения до максимума, при подтормаживании (стрелка назад)
hand_break_torque 		= 0.06        	; сила торможения пробелом (по умолчанию = break_torque)

;-------------------------------------------------------------------------------
;------ Gearbox ----------------------------------------------------------------
main_gear_ratio    		= 5.5        	; Передаточное отношение
auto_transmission  		= off           ; Автоматическая коробка (on/off)

[transmission_gear_ratio]
; shift down/ shift up. (rpm, необходимое для переключения)
R                  	= 4.7, 1000,  4000
N1                 	= 4.4, 2000, 3900
N2                 	= 3.2, 2000, 3900	
N3                 	= 2,  2000, 3900
N4                 	= 1, 2000, 3900

;-------------------------------------------------------------------------------
;------ Rest Adjustment --------------------------------------------------------
[lights]
headlights  = f1, f2

[f1]
bone               		= right_light
color              		= 1.0,1.0,1.0,0.2
range              		= 40
cone_angle         		= 60
spot_texture       		= internal\internal_light_attpoint
glow_texture       		= glow\glow_yellow
glow_radius        		= 0.5

[f2]
bone               		= left_light
color              		= 1.0,1.0,1.0,0.2
range              		= 40
cone_angle         		= 60
spot_texture       		= internal\internal_light_attpoint
glow_texture       		= glow\glow_yellow
glow_radius        		= 0.5

;-------------------------------------------------------------------------------
;------ Звуки ------------------------------------------------------------------
[car_sound]
snd_volume         		    = 1.0
snd_name           		    = car\zaz
engine_sound_start_dellay	= 0.5
engine_start			    = car\zaz_on
engine_stop			        = car\zaz_off
transmission_switch		    = car\gear_middle
explosion_sound    		    = weapons\heli_explosion
relative_pos       		    = 0.25,1,-1

;-------------------------------------------------------------------------------
;------ damage params ----------------------------------------------------------
[damage_particles]
explosion_particles      = explosions\expl_vehichels
car_damage_particles1    = explosions\expl_car_smoke_small
car_damage_particles2    = explosions\expl_car_smoke_big
wheels_damage_particles1 = vehiclefx\exhaust_1
wheels_damage_particles2 = vehiclefx\exhaust_1
particle_bones1          = engine
particle_bones2          = engine

;-------------------------------------------------------------------------------
;------ particle bones ---------------------------------------------------------
[particle_bones]
front_bamper      		=  0,1,0

;-------------------------------------------------------------------------------
;------ damage items -----------------------------------------------------------
[damage_items]
back_left_wheel   		= 5000
back_right_wheel  		= 5000
front_left_wheel  		= 5000
front_right_wheel 		= 5000
left_door         		= 1000

;-------------------------------------------------------------------------------
;------ collisiondamage --------------------------------------------------------
[collision_damage]
root            = 0.0001
front_bamper    = 0.0001
kapot_left		= 0.0001
kapot_right		= 0.0001

;-------------------------------------------------------------------------------
;------ damage bones -----------------------------------------------------------
[damage_bones]          ;аналогично секции в актере, но без анимаций
;bone_name     			= <hit_scale>,<-1>,<wound_scale>
;<hit_scale> 			- коэфф. изменения хита (уменьшения здоровья)
;<wound_scale> 			- коэфф. изменения величины открытой раны - незадействован
default       			= 1, -1, 0.1
front_bamper          	= 0.5,-1,0.1
left_door             	= 0.1,-1,0,1
engine				    = 2, -1,0.1
bak				        = 2.3, -1,0.1

;-------------------------------------------------------------------------------
;------ Иммунитеты -------------------------------------------------------------
[immunities]
burn_immunity         	= 0.005
strike_immunity       	= 0.0001
shock_immunity        	= 0.0001
wound_immunity        	= 0.005
radiation_immunity    	= 0.000001
telepatic_immunity    	= 0.000001
chemical_burn_immunity 	= 0.001
explosion_immunity    	= 0.0001
fire_wound_immunity   	= 0.005
wound_2_immunity  		= 0.0

